<div class="container-fluid">
     @using (Html.BeginForm("Create", "Schools", FormMethod.Post, new { enctype = "multipart/form-data" }))
     {
          @Html.AntiForgeryToken()
          @Html.ValidationSummary(true)


          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
               <div class="form-group">
                    <label for="nameTb">School Name <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="nameTb" name="Name" placeholder="School Name e.g. University of Ilorin" type="text" />
               </div>

               <div class="form-group">
                    <label for="descriptionTb">School Description <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="descriptionTb" name="Description" placeholder="School Description e.g. This is the school description..." type="text" />
               </div>

               <div class="form-group">
                    <label for="emailTb">Email Address<span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="emailTb" name="Email" placeholder="Email Address e.g. info@@school.com.ng" type="email" />
               </div>

               <div class="form-group">
                    <label for="addressTb">School Address <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="addressTb" name="Address" placeholder="School Address e.g. 18, Some Street, Ilorin" type="text" />
               </div>

               <div class="form-group">
                    <label for="ddlState">School State <span class="glyphicon glyphicon-question-sign"></span></label>

                    @Html.DropDownList("State", new SelectList((string[])ViewData["stateDdl"]), new { @class = "form-control", id = "ddlState" })
               </div>               
          </div>

          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
               <p>
                    <button type="submit" class="btn btn-lg btn-unique"><span class="glyphicon glyphicon-floppy-save"></span> Add School</button>
               </p>
          </div>

     }
</div>
