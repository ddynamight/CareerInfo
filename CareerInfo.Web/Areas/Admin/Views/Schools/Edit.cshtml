@model CareerInfo.Model.School


@{
     ViewData["Title"] = "Schools";
     ViewBag.BodyId = "schools";
}

@section Nav{
     @Html.Partial("_SchoolNav")
}



<div id="innerHeader">
     <div class="container-fluid">
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
               <h2><span class="glyphicons glyphicons-mixed-buildings"></span> @Model.Name </h2>
          </div>

          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right">
               <input class="search input-sm" placeholder="Search" type="search" />
          </div>
     </div>
</div>


<div id="innerCon">
     <div class="container-fluid">
          @using (Html.BeginForm("Edit", "Schools", FormMethod.Post, new { enctype = "multipart/form-data" }))
          {
               @Html.AntiForgeryToken()
               @Html.ValidationSummary(true)


               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                         <label for="nameTb">School Name <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Name" class="form-control" id="nameTb" name="Name" placeholder="School Name e.g. University of Ilorin" type="text" />
                    </div>

                    <div class="form-group">
                         <label for="descriptionTb">School Description <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Description" class="form-control" id="descriptionTb" name="Description" placeholder="School Description e.g. This is the school description..." type="text" />
                    </div>

                    <div class="form-group">
                         <label for="emailTb">Email Address<span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Email" class="form-control" id="emailTb" name="Email" placeholder="Email Address e.g. info@@school.com.ng" type="email" />
                    </div>

                    <div class="form-group">
                         <label for="addressTb">School Address <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Address" class="form-control" id="addressTb" name="Address" placeholder="School Address e.g. 18, Some Street, Ilorin" type="text" />
                    </div>

                    <div class="form-group">
                         <label for="stateTb">School State <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="State" class="form-control" id="stateTb" name="State" placeholder="Lagos" type="text" />
                    </div>
               </div>

               <input asp-for="Id" hidden="hidden" />
               <input asp-for="Tagname" hidden="hidden" />

               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                    <p>
                         <button type="submit" class="btn btn-lg btn-unique"><span class="glyphicon glyphicon-floppy-save"></span> Save Changes</button>
                    </p>
               </div>

          }
     </div>
</div>


