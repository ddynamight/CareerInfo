@model IEnumerable<CareerInfo.Model.Blog>

@{
     ViewData["Title"] = "Blogs";
     ViewBag.BodyId = "blogs";

}

@section Nav{
     @Html.Partial("_BlogNav")
}

<div id="innerHeader">
     <div class="container-fluid">
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
               <h2><span class="glyphicons glyphicons-blog"></span> Blogs <span class="badge">@Model.Count()</span></h2>
          </div>

          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right">
               <input class="search input-sm" placeholder="Search" type="search" />
          </div>
     </div>
</div>


<div id="innerCon">
     <div class="container-fluid">
          <table class="table table-responsive">
               <thead>
                    <tr>
                         <th>
                              S/N
                         </th>
                         <th>
                              Title
                         </th>
                         <th>
                              Date
                         </th>
                    </tr>
               </thead>
               <tbody>
                    @foreach (var item in Model.OrderByDescending(e => e.Date))
                    {
                         <tr>
                              <td></td>
                              <td class="title">
                                   @item.Title
                              </td>
                              <td class="date">
                                   @item.Date.ToLocalTime()
                              </td>
                         </tr>
                    }
               </tbody>
               <tfoot>

               </tfoot>
          </table>
     </div>
</div>


<script type="text/javascript">
     var options = {
          valueNames: ['title', 'date']
     };

     var userList = new List('mainInnerCon', options);
</script>



<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
     <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
               <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"><span class="glyphicons glyphicons-blog"></span> Add Blog</h4>
               </div>
               <div class="modal-body">
                    @await Html.PartialAsync("Create")
               </div>
               <div class="modal-footer">
                    
               </div>
          </div>
     </div>
</div>
