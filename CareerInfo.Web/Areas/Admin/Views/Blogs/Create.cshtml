<div class="container-fluid">
     @using (Html.BeginForm("Create", "Blogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
     {
          @Html.AntiForgeryToken()
          @Html.ValidationSummary(true)


          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
               <div class="form-group">
                    <label for="titleTb">Blog Title <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="titleTb" name="Title" placeholder = "Blog Title e.g. The Best Career to Choose" type="text" />
               </div>

               <div class="form-group">
                    <label for="descriptionTb">Blog Description <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input class="form-control" id="descriptionTb" name="Description" placeholder="Blog Description e.g. This is the blog description..." type="text" />
               </div>

               <div class="form-group">
                    <label for="bigImageTb">Big Blog Image <span class="text-danger">(Min. Recommended Size: 1400px by 400px)</span> <span class="glyphicon glyphicon-question-sign"></span></label>

                    <input accept="image/*" class="form-control" type="file" id="file" name="file" draggable="true" />
               </div>
          </div>

          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
               <div class="form-group">
                    <label for="detailsTb">Blog Article <span class="glyphicon glyphicon-question-sign"></span></label>

                    @Html.TextArea("Article", new { @class = "form-control", id = "detailsTb", placeholder = "Article e.g. This is blog has or will serve...", rows = "6" })
               </div>
          </div>

          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
               <p>
                    <button type="submit" class="btn btn-lg btn-unique"><span class="glyphicon glyphicon-floppy-save"></span> Add Blog</button>
               </p>
          </div>

     }
</div>


<script>
    $(function () {
        $('#detailsTb').ckeditor();
    });
</script>