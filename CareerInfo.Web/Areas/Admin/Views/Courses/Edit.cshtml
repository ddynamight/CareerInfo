@model CareerInfo.Model.Course


@{
     ViewData["Title"] = "Course";
     ViewBag.BodyId = "courses";
}

@section Nav{
     @Html.Partial("_CourseNav")
}



<div id="innerHeader">
     <div class="container-fluid">
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
               <h2><span class="fa fa-book"></span> @Model.Name </h2>
          </div>

          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right">
               <input class="search input-sm" placeholder="Search" type="search" />
          </div>
     </div>
</div>


<div id="innerCon">
     <div class="container-fluid">
          @using (Html.BeginForm("Edit", "Courses", FormMethod.Post, new { enctype = "multipart/form-data" }))
          {
               @Html.AntiForgeryToken()
               @Html.ValidationSummary(true)


               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                         <label for="nameTb">Course Name <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Name" class="form-control" id="nameTb" name="Name" placeholder="Course Name e.g. Computer Science" type="text" />
                    </div>

                    <div class="form-group">
                         <label for="descriptionTb">Course Description <span class="glyphicon glyphicon-question-sign"></span></label>
                         <input asp-for="Description" class="form-control" id="descriptionTb" name="Description" placeholder="Course Description e.g. This is the course description..." type="text" />
                    </div>
               </div>

               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                         <label for="detailsTb">Course Description Details <span class="glyphicon glyphicon-question-sign"></span></label>

                         <textarea asp-for="Details" class="form-control" id="detailsTb" placeholder="Article e.g. This is course has or will serve..." rows="6"></textarea>
                    </div>
               </div>

               <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                         <label for="detailsTb">Select an Image to Respresent this Course <span class="text-danger">Recommended Size (1400 X 400)</span> <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input accept="image/*" class="form-control" type="file" id="file" name="file" draggable="true" />
                    </div>
               </div>

               <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <img class="img img-responsive text-center" id="imageThumb" />
               </div>

               <br />
               <br />
               <br />

               <h4 class="form-divider text-center">Course Requirements</h4>

               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                         <label for="olevelTb">O-Level Subjects <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Requirement.Olevel" class="form-control" id="olevelTb" name="Description" placeholder="Course O Level Requirement e.g. Mathematics, English" type="text" />
                    </div>

                    <div class="form-group">
                         <label for="jambTb">Jamb Subjects <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Requirement.Jamb" class="form-control" id="jambTb" placeholder="Course Jamb Requirement e.g. Mathematics, English" type="text" />
                    </div>

                    <div class="form-group">
                         <label for="jambScoreTb">Jamb Scores <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Requirement.JambScore" class="form-control" id="jambScoreTb" placeholder="Minimum Jamb Score Requirement e.g. 200" type="number" min="0" />
                    </div>

                    <div class="form-group">
                         <label for="alevelTb">A-Level Subjects <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Requirement.Alevel" class="form-control" id="alevelTb" placeholder="Course A-Level Requirement e.g. Mathematics, English" type="text" />
                    </div>

                    <div class="form-group">
                         <label for="postUtmeTb">Post Utme Score <span class="glyphicon glyphicon-question-sign"></span></label>

                         <input asp-for="Requirement.PostUtme" class="form-control" id="postUtmeTb" name="Requirement.PostUtme" placeholder="Course Post UTME Score e.g. 80" type="number" min="0" />
                    </div>
               </div>


               <br />
               <br />
               <br />

               <h4 class="form-divider text-center">Profession and Industry </h4>

               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                         <label for="professionDetailsTb">Industrial Description Details <span class="glyphicon glyphicon-question-sign"></span></label>

                         <textarea asp-for="Profession.Details" class="form-control" id="professionDetailsTb" placeholder="Article e.g. This is course has or will serve..." rows="6"></textarea>
                    </div>
               </div>

               <br />
               <br />
               <br />

               <h4 class="form-divider text-center">Personality of People</h4>

               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                         <label for="personalityDetailsTb">Course Personality Description Details <span class="glyphicon glyphicon-question-sign"></span></label>

                         <textarea asp-for="Personality.Details" class="form-control" id="personalityDetailsTb" placeholder="Article e.g. This is course has or will serve..." rows="6"></textarea>
                    </div>
               </div>

               <input asp-for="Id" hidden="hidden" />
               <input asp-for="Tagname" hidden="hidden" />
               <input asp-for="Image" hidden="hidden" />
               <input asp-for="Requirement.Id" hidden="hidden" />
               <input asp-for="Personality.Id" hidden="hidden" />
               <input asp-for="Profession.Id" hidden="hidden" />
               <input asp-for="SchoolCourses" hidden="hidden" />

               <br />

               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                    <p>
                         <button type="submit" class="btn btn-lg btn-unique"><span class="glyphicon glyphicon-floppy-save"></span> Save Changes </button>
                    </p>
               </div>

          }
     </div>
</div>





<script>
    $(function () {
         $('#detailsTb').ckeditor();
         $('#professionDetailsTb').ckeditor();
         $('#personalityDetailsTb').ckeditor();
     });


     document.getElementById("file").onchange = function () {
          var reader = new FileReader();

          reader.onload = function (e) {
               // get loaded data and render thumbnail.
               document.getElementById("imageThumb").src = e.target.result;
          };

          // read the image file as a data URL.
          reader.readAsDataURL(this.files[0]);
     };
</script>