@using Microsoft.AspNetCore.Identity
@using CareerInfo.Model;
@using CareerInfo.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (User.Identity.IsAuthenticated && User.Identity.Name.Equals("admin@careerinfo.com.ng"))
{
     <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
          <ul>
               <li>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" title="Manage">Hello Admin!</a>
               </li>
               <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
               </li>
          </ul>
     </form>
}
else if (User.Identity.IsAuthenticated)
{
     <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
          <ul>
               <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
               </li>
               <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
               </li>
          </ul>
     </form>
}
else
{
     <ul>
          <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
          <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
     </ul>
}